<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="com.google.cloud.android.speech.SignUpActivity">

         <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="30dp"
            android:textColor="@color/default_navy"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="앱 사용을 위해서 회원가입이 필요합니다."
            android:textSize="15dp"
            android:textColor="@color/default_grey"/>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="간단한 몇 가지 정보만 입력한 후 연습을 시작해보세요!"
            android:textSize="15dp"
            android:textColor="@color/default_grey"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="ID"
                android:textSize="20dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/editID"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FFEAEAEA"
                android:hint="사용자 계정"
                android:padding="5dp"
                android:textAlignment="center"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="이름"
                android:textSize="20dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/editName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FFEAEAEA"
                android:hint="사용자 이름"
                android:padding="5dp"
                android:textAlignment="center"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="비밀번호"
                android:textSize="20dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/editPW"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FFEAEAEA"
                android:hint="비밀번호"
                android:padding="5dp"
                android:textAlignment="center"
                android:inputType="textPassword"
                android:textSize="20dp" />

        </LinearLayout>

     <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@xml/bt_corner"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:text="가입하기"
                android:textColor="@color/default_text2"
                android:textSize="20dp" />

            <Button
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="뒤로가기"
                android:textSize="20dp"
                android:background="@xml/bt_corner_pink"
                android:textColor="@color/default_text2"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:id="@+id/btnCancel"/>

        </LinearLayout>


</LinearLayout>
